{
  "name": "__MSG_extensionName__",
  "author": "Omer Furkan Isleyen",
  "version": "1.0",
  "manifest_version": 2,
  "description": "__MSG_extensionDescription__",

  "icons": {
    "128": "icons/favicon.ico"
  },

  "content_scripts": [
    {
      "matches": ["*://*.google.com/*"],
      "js": ["content-script.js"]
    }
  ],

  "browser_action": {
    "default_icon": {
      "64": "icons/favicon.ico",
      "96": "icons/favicon.ico",
      "128": "icons/favicon.ico"
    },
    "default_title": "GS Language Changer",
    "default_popup": "changer.html"
  },

  "permissions": ["<all_urls>", "tabs"],

  "default_locale": "en",
  "background": {
    "scripts": ["background.js"]
  }
}
