{
  "name": "__MSG_extensionName__",
  "author": "Omer Furkan Isleyen",
  "version": "1.0",
  "manifest_version": 3,
  "description": "__MSG_extensionDescription__",
  "homepage_url": "https://github.com/OmerFI/GoogleSearchLanguageChanger",
  "icons": {
    "16": "icons/favicon-16x16-BGWhite.png",
    "32": "icons/favicon-32x32-BGWhite.png",
    "48": "icons/favicon-BGWhite.ico",
    "192": "icons/android-chrome-192x192-BGWhite.png",
    "512": "icons/android-chrome-512x512-BGWhite.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/*"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/favicon-16x16-BGWhite.png",
      "32": "icons/favicon-32x32-BGWhite.png",
      "48": "icons/favicon-BGWhite.ico",
      "192": "icons/android-chrome-192x192-BGWhite.png",
      "512": "icons/android-chrome-512x512-BGWhite.png"
    },
    "default_title": "Google Search Language Changer",
    "default_popup": "changer.html"
  },
  "permissions": [
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "*://google.com/*",
    "*://*.google.com/*"
  ],
  "default_locale": "en"
}